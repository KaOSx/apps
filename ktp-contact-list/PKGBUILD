
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ktp-contact-list
pkgver=${_kdever}
pkgrel=1
pkgdesc="Telepathy contact list application "
arch=('x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdbusaddons' 'kio' 'kcmutils' 'knotifyconfig' 'kdelibs4support' 'ktp-common-internals'
         'telepathy-qt5' 'kpeople')
makedepends=('extra-cmake-modules' 'kdoctools' 'git' 'boost')
groups=('kde-telepathy' 'communication')
#source=("ftp://mirrors.mit.edu/kde/stable/kde-telepathy/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
conflicts=('kf5-ktp-contact-list')
replaces=('kf5-ktp-contact-list')
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  cd ${srcdir}
  
  mkdir -p build
  cd build

  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
