
pkgname=kquickimageeditor6
_pkgname=kquickimageeditor
pkgver=0.3.0
pkgrel=1
pkgdesc="Set of QtQuick components providing basic image editing capabilities."
arch=('x86_64')
url="https://invent.kde.org/libraries/kquickimageeditor"
license=('LGPL')
depends=('qt6-declarative' 'qt6-5compat')
makedepends=('extra-cmake-modules6')
source=("https://download.kde.org/stable/kquickimageeditor/${_pkgname}-${pkgver}.tar.xz")
sha256sums=('330ebf3653883eeebde54385d783c51c2d30ff77d41b294ece79af7e9c21c6f8')

build() {
 cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DQT_MAJOR_VERSION=6
 cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
