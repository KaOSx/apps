
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kpackage6
_pkgname=kpackage
pkgver=${_kf6ver}
pkgrel=6
pkgdesc='Framework that lets applications manage user installable packages of non-binary assets'
arch=('x86_64')
url='https://invent.kde.org/frameworks/kpackage'
license=('LGPL')
depends=('karchive6' 'ki18n6' 'kcoreaddons6')
makedepends=('extra-cmake-modules6' 'kdoctools6' 'qt6-5compat')
groups=('kf6')
#source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-${_kf6ver}.tar.xz ../kf5.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/frameworks/${_pkgname}.git")
md5sums=('SKIP')

prepare() {
  cd ${_pkgname}
  
  #patch -p1 -i ${srcdir}/e7861d979c71815a614f2baf0b3d25f329fadef0.diff
}

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
