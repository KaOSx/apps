
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ktextaddons
pkgver=1.4.0
epoch=1
pkgrel=1
pkgdesc='Various text handling addons'
arch=('x86_64')
url='https://invent.kde.org/libraries/ktextaddons'
license=('LGPL')
depends=('ki18n' 'kconfigwidgets' 'karchive' 'kxmlgui' 'kcoreaddons' 'qtkeychain'
         'qt5-speech')
makedepends=('extra-cmake-modules' 'qt5-tools')
source=("https://download.kde.org/stable/ktextaddons/${pkgname}-${pkgver}.tar.xz")
sha256sums=('e91026c61f352f087039b482e8b819c057d552929326d552f033f0bde34c88f1')

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
