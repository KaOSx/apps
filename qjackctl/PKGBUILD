
pkgname=qjackctl
pkgver=0.5.7
pkgrel=1
pkgdesc="Qt front-end for the JACK low-latency audio server"
url="https://qjackctl.sourceforge.io/"
arch=('x86_64')
license=('GPL')
depends=('jack' 'qt5-base' 'qt5-x11extras' 'portaudio')
makedepends=('qt5-tools')
options=('!makeflags')
groups=('multimedia')
source=("https://downloads.sourceforge.net/qjackctl/${pkgname}-${pkgver}.tar.gz")
md5sums=('603f2f91102272c10d31a3601c700f69')

build() {
  cd ${pkgname}-${pkgver}
  
  #CXXFLAGS="-std=c++11"

 ./configure --prefix=/usr
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir}/ install
}
