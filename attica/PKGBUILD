
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=attica
pkgver=${_kf6ver}
pkgrel=6
arch=('x86_64')
url='https://invent.kde.org/frameworks/attica'
pkgdesc='Open Collaboration Service client library'
license=('LGPL')
depends=('qt6-base')
makedepends=('extra-cmake-modules6')
groups=('kf6')
#source=("https://download.kde.org/stable/frameworks/5.99/${pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${pkgname}-${_kf6ver}.tar.xz ../kf6.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/frameworks/${pkgname}.git")
md5sums=('SKIP')

build() {
 cmake -B build -S ${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
