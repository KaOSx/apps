
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kfilemetadata
pkgver=${_kf5ver}
pkgrel=3
pkgdesc="A library for extracting file metadata"
arch=('x86_64')
url='https://invent.kde.org/frameworks/kfilemetadata'
license=('LGPL')
depends=('ebook-tools' 'karchive' 'kcoreaddons' 'exiv2' 'ki18n' 'poppler-qt5' 'taglib' 'ffmpeg')
makedepends=('extra-cmake-modules')
groups=('kdeplasma5')
source=("https://download.kde.org/stable/frameworks/5.74/${pkgname}-$pkgver.tar.xz"
        'bug_414227.patch')
md5sums=(`grep ${pkgname}-$_kf5ver.tar.xz ../kf5.md5 | cut -d" " -f1`
         'f8617a6da8f16b747522f8d37a414f4e')

prepare() {
  cd ${pkgname}-${pkgver}
  # Dolphin crashes with 19.12.0 https://bugs.kde.org/show_bug.cgi?id=414227
  #patch -p1 -i ${srcdir}/bug_414227.patch
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DKDE_INSTALL_LIBDIR=lib
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}
