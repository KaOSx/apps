
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf
    
pkgname=kdf
arch=('x86_64')
#pkgver=${_kdever}
pkgver=16.07.71
pkgrel=1
pkgdesc="Displays the available file devices along with information on their capacity, free space, type and mount point."
url="https://www.kde.org/applications/system/kdiskfree/"
license=('GPL' 'LGPL' 'FDL')
depends=('kconfigwidgets' 'kcoreaddons' 'ki18n' 'kiconthemes' 'kio' 'kcmutils' 'knotifications'
         'kwidgetsaddons' 'kxmlgui')
makedepends=('extra-cmake-modules' 'kdoctools' 'git')
groups=('kde' 'kdeutils' 'kde-uninstall' 'utils')
#source=($_mirror/${_pkgname}-$_kdever.tar.xz)
#md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git://anongit.kde.org/kdf")
md5sums=('SKIP')

prepare() {
  cd $pkgname
  #sed -i -e 's|V4.2-Based Variant V1.1//EN" "dtd/kdex.dtd"|V4.5-Based Variant V1.1//EN" "dtd/kdedbx45.dtd"|' doc/app/index.docbook
  #sed -i -e 's|V4.2-Based Variant|V4.5-Based Variant|' doc/kcontrol/index.docbook
  #sed -i -e 's|dtd/kdex.dtd|dtd/kdedbx45.dtd|' doc/kcontrol/index.docbook
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
