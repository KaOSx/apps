
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kate6
_pkgname=kate
pkgver=${_kdever}
pkgrel=1
pkgdesc='Modern text editor built on the KDE Frameworks and Qt'
arch=('x86_64')
url='https://invent.kde.org/utilities/kate'
license=('LGPL')
depends=('kconfig6' 'kguiaddons6' 'ki18n6' 'kjobwidgets6' 'kitemmodels6' 'threadweaver6'
         'kio6' 'knewstuff6' 'kparts6' 'ktexteditor6' 'kwindowsystem6' 'kxmlgui6'
         'plasma-framework6' 'kuserfeedback6')
makedepends=('extra-cmake-modules' 'kdoctools6')
source=("$_mirror/${_pkgname}-${pkgver}.tar.xz"
        "https://invent.kde.org/utilities/kate/commit/4cfb4123efc89b425dea176ccb5b58ce2f0ad5da.diff")
md5sums=(`grep ${_pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`
         '8a8d0371d00e4dc4abe189d6789a6d2a')

prepare() {
  cd ${_pkgname}-${pkgver}

  #patch -p1 -i ${srcdir}/4cfb4123efc89b425dea176ccb5b58ce2f0ad5da.diff
  sed -i 's|dirOperator->setView|dirOperator->setViewMode|' addons/filebrowser/katefilebrowser.cpp
  #sed -i 's|dirOperator->setView|dirOperator->setViewMode|' addons/filebrowser/katefilebrowser.cpp
}

build() {
  cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_WITH_QT6=ON \
    -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=${_kf5ver} \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
