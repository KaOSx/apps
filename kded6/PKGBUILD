
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kded6
_pkgname=kded
pkgver=${_kf6ver}
pkgrel=4
pkgdesc='Central daemon of KDE work spaces'
arch=('x86_64')
url='https://invent.kde.org/frameworks/kded'
license=('LGPL')
depends=('kconfig6' 'kcoreaddons6' 'kcrash6' 'kdbusaddons6' 'kservice6')
makedepends=('extra-cmake-modules6' 'kdoctools6')
groups=('kf6')
#source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-$_kf6ver.tar.xz ../kf5.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/frameworks/${_pkgname}.git")
md5sums=('SKIP')

prepare() {
  cd ${_pkgname}

  #patch -p1 -R -i $srcdir/blocking.diff
}

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
