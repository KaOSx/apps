
pkgname=ktp-common-internals
pkgver=0.6.1
pkgrel=1
pkgdesc="Common libraries for telepathy-kde"
arch=('x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('kdelibs' 'telepathy-qt' 'telepathy-mission-control' 'kdeutils-kwallet'
         'telepathy-logger-qt')
makedepends=('cmake' 'automoc4')
conflicts=('telepathy-kde-presence-dataengine')
replaces=('telepathy-kde-presence-dataengine')
provides=('telepathy-kde-presence-dataengine')
groups=('kde-telepathy')
source=("ftp://mirrors.mit.edu/kde/stable/kde-telepathy/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('6048115f0bf6832ddcddb60d4aed0b63')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}"/build
  make DESTDIR="${pkgdir}" install
}
