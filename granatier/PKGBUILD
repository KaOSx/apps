
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=granatier
pkgver=${_kdever}
pkgrel=2
pkgdesc="Granatier is a clone of the classic Bomberman game."
arch=('x86_64')
url='https://apps.kde.org/granatier/'
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons6' 'kconfig6' 'kcrash6' 'kdbusaddons6' 'kwidgetsaddons6' 'kconfig6'
         'ki18n6' 'kconfigwidgets6' 'kxmlgui6' 'libkdegames'  'qt6-svg')
makedepends=('extra-cmake-modules' 'kdoctools6')
groups=('kde' 'kde-games' 'kde-uninstall')
source=("$_mirror/${pkgname}-${_kdever}.tar.xz")
md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DBUILD_TESTING=OFF \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
