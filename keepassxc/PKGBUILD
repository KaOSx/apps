
pkgname=keepassxc
pkgver=2.6.3
pkgrel=1
pkgdesc="Cross-platform community-driven port of the Windows application Keepass Password Safe"
arch=('x86_64')
url="https://www.keepassxc.org/"
license=('GPL2')
depends=('qt5-x11extras' 'qt5-svg' 'libxtst' 'shared-mime-info' 'libsodium' 'argon2'
         'quazip' 'qrencode')
makedepends=('cmake' 'intltool' 'qt5-tools')
groups=('accessories')
replaces=('keepassx')
provides=('keepassx')
conflicts=('keepassx')
source=("https://github.com/keepassxreboot/keepassxc/releases/download/${pkgver}/${pkgname}-${pkgver}-src.tar.xz")
sha256sums=('e7e0b6ed8f3881c5b9579074bc3cde3991b28c1a3d1c852c46f2b7930a10f7d1')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib \
    -DWITH_GUI_TESTS=OFF \
    -DWITH_XC_BROWSER=ON \
    -DWITH_XC_NETWORKING=ON \
    -DWITH_XC_AUTOTYPE=ON \
    -DWITH_XC_SSHAGENT=ON \
    -DWITH_XC_KEESHARE=ON \
    -DWITH_XC_DOCS=OFF
  make 
}

check() {
    cd build
    
    make test
}

package() {
    cd build
    
    make DESTDIR=${pkgdir} install 
}
