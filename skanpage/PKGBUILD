 
pkgname=skanpage
pkgver=1.0.0
pkgrel=1
pkgdesc="Scanning application designed for multi-page scanning and saving of documents and images."
arch=("x86_64")
url="https://apps.kde.org/skanpage/"
license=('GPL')
depends=('kcoreaddons' 'ki18n' 'kirigami' 'kcrash' 'kconfig' 'libksane')
makedepends=('extra-cmake-modules')
source=("https://download.kde.org/stable/skanpage/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('90f5401bae283e4285df3b4707857b336c5cd4072fc221e762930c2cc40d6060')

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
