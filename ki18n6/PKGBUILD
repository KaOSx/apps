
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ki18n6
_pkgname=ki18n
pkgver=${_kf6ver}
pkgrel=6
pkgdesc='Two libraries, one for Gettext-based text internationalization, and one for access to data about countries and timezones.'
arch=('x86_64')
url='https://invent.kde.org/frameworks/ki18n'
license=('LGPL')
depends=('qt6-declarative' 'iso-codes')
makedepends=('extra-cmake-modules6')
groups=('kf6')
#source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-${_kf5ver}.tar.xz ../kf6.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/frameworks/${_pkgname}.git")
md5sums=('SKIP')

prepare () {
  cd ${_pkgname}

  #patch -p1 -i ${srcdir}/97ce7535124aff6a576bc748260ce6fa4ab781d8.diff
}

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
