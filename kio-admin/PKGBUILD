
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kio-admin
pkgver=${_kdever}
pkgrel=1
pkgdesc="Manage files as administrator using the admin:// KIO protocol."
arch=('x86_64')
url='https://invent.kde.org/system/kio-admin'
license=('GPL2')
depends=('ki18n6' 'kio6' 'polkit-qt6')
makedepends=('extra-cmake-modules6')
source=("$_mirror/${pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_WITH_QT6=ON \
    -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=${_kf5ver} \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
