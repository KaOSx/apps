
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=angelfish6
_pkgname=angelfish
pkgver=${_kdever}
pkgrel=3
arch=('x86_64')
pkgdesc="Web browser for Plasma Mobile (kf6 version)"
url="https://invent.kde.org/plasma-mobile/angelfish"
license=('GPL2')
depends=('qt6-webengine' 'qt6-declarative' 'qt6-svg' 'kirigami-addons6' 'purpose6'
         'ki18n6' 'kconfig6' 'kcoreaddons6' 'kdbusaddons6' 'kwindowsystem6'
         'knotifications6' 'qqc2-desktop-style6' 'futuresql6' 'qcoro-qt6')
makedepends=('extra-cmake-modules6' 'qt6-tools') #'qtfeedback' 
#source=("$_mirror/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/plasma-mobile/${_pkgname}.git")
md5sums=('SKIP')

prepare () {
  cd ${_pkgname}

  #patch -p1 -i ${srcdir}/dd7450a80f10e118f8.diff
  #sed -i 's|QtGraphicalEffects 1.0|Qt5Compat.GraphicalEffects|' src/contents/ui/desktop/desktop.qml
}

build() {
  cmake -B build -S ${_pkgname} \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      -DBUILD_TESTING=OFF \
      -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
