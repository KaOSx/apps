
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=bluez-qt6
_pkgname=bluez-qt
arch=('x86_64')
pkgver=${_kf6ver}
pkgrel=9
pkgdesc="Qt wrapper for Bluez 5 DBus API"
url="https://invent.kde.org/frameworks/bluez-qt"
license=('GPL' 'LGPL' 'FDL')
depends=('qt6-declarative' 'bluez')
makedepends=('extra-cmake-modules6')
#source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-${_kf6ver}.tar.xz ../kf5.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/frameworks/${_pkgname}.git")
md5sums=('SKIP')

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
