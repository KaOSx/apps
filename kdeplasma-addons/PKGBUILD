         'kdeplasma-addons-runners-audioplayercontrol'
         'kdeplasma-addons-runners-browserhistory'
         'kdeplasma-addons-runners-characters'
         'kdeplasma-addons-runners-contacts'
         'kdeplasma-addons-runners-converter'
