
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kwayland-integration6
_pkgname=kwayland-integration
pkgver=${_plasmaver}
pkgrel=3
pkgdesc="Provides integration plugins for various KDE frameworks for the wayland windowing system."
arch=('x86_64')
url="https://invent.kde.org/plasma/kwayland-integration"
license=('LGPLv2+')
depends=('kidletime6' 'kwindowsystem6' 'kwayland6')
makedepends=('extra-cmake-modules6'  'kdoctools6')
groups=('kdeplasma6')
#source=("https://download.kde.org/stable/plasma/${pkgver}/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-${_plasmaver}.tar.xz ../kf5.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/plasma/${_pkgname}.git")
md5sums=('SKIP')

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_LIBEXECDIR=/usr/lib \
    -DBUILD_TESTING=OFF \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
