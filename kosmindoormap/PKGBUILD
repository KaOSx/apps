
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kosmindoormap
pkgver=${_kdever}
pkgrel=1
arch=('x86_64')
pkgdesc="Library and QML component for rendering multi-level OSM indoor maps of for example a train station."
url="https://invent.kde.org/libraries/kosmindoormap"
license=('LGPL')
depends=('ki18n' 'kpublictransport' 'protobuf')
makedepends=('extra-cmake-modules')
groups=('kde' 'kdepim' 'kde-uninstall')
source=($_mirror/${pkgname}-${_kdever}.tar.xz)
md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

prepare() {
  cd ${pkgname}-${pkgver}

  #patch -p1 -i ${srcdir}/7098c8be9a5e7fabf74543308bfaf11a2ebe5484.diff
}

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_QMLDIR=/usr/lib/qt5/qml
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build 
}
