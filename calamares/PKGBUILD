arch=('x86_64')
url='http://calamares.io/'
license=('LGPL')
depends=('qt5-svg' 'qtwebkit-tp' 'kconfig' 'ki18n' 'kcoreaddons' 'solid' 'kpackage' 'plasma-framework'
         'yaml-cpp' 'parted' 'libatasmart' 'udisks2' 'polkit-qt5' 'kpmcore' 'kparts') # 'pythonqt') # 'libpwquality')
makedepends=('extra-cmake-modules' 'git' 'qt5-tools' 'boost') # 'clang')
options=('debug' '!staticlibs')
#source=("git://github.com/KaOSx/calamares#commit=f36b58f2df47b00487e9e505cdd7f207f4da2fda"
source=("git://github.com/KaOSx/calamares"
#source=("git://github.com/calamares/calamares"
        'calamares.desktop'
        'installer.svg'
        'kdm_sddm.conf'
        'unpackfs.conf'
        'launch-calamares.sh'
        'license.pdf'
        'release_notes.html')
md5sums=('SKIP'
         '663fce16ac08b3149516e6a0d2797f65'
         'd5c65f43e057054e9728810530c4a030'
