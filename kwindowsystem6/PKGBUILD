
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kwindowsystem6
_pkgname=kwindowsystem
pkgver=${_kf5ver}
pkgrel=1
pkgdesc='Framework providing access to properties and features of the window system'
arch=('x86_64')
url='https://invent.kde.org/frameworks/kwindowsystem'
license=('LGPL')
depends=('qt6-base' 'libxfixes')
makedepends=('extra-cmake-modules' 'qt6-tools')
groups=('kf6')
source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${_pkgname}-$_kf5ver.tar.xz ../kf5.md5 | cut -d" " -f1`)

build() {
  cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_WITH_QT6=ON \
    -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=5.100.0 \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
