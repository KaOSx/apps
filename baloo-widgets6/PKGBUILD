
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=baloo-widgets6
_pkgname=baloo-widgets
pkgver=${_kdever}
pkgrel=2
pkgdesc="Widgets for the baloo framework for searching and managing metadata"
arch=('x86_64')
url='https://invent.kde.org/libraries/baloo-widgets'
license=('LGPL')
depends=('baloo6' 'kconfig6' 'kio6' 'ki18n6' 'kfilemetadata6' 'kservice6')
makedepends=('extra-cmake-modules6' 'kdoctools6')
#source=($_mirror/${pkgname}-$_kdever.tar.xz)
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
#groups=('kde-system')
source=("git+https://invent.kde.org/libraries/${_pkgname}.git")
md5sums=('SKIP')

prepare() {
  cd ${_pkgname}

  #patch -p1 -i ${srcdir}/7ff54ae9b68ca0edf3d6cd57c3eefb6cf072b6f8.diff
}

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DQT_MAJOR_VERSION=6 \
    -DBUILD_WITH_QT6=ON
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
