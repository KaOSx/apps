
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=prison
pkgver=${_kf5ver}
pkgrel=2
arch=('x86_64')
pkgdesc="A barcode api to produce QRCode barcodes and DataMatrix barcode"
url="https://github.com/KDE/prison"
license=('GPL' 'LGPL' 'FDL')
depends=('qt5-base' 'libdmtx' 'qrencode')
makedepends=('extra-cmake-modules' 'doxygen' 'qt5-tools')
source=("http://download.kde.org/stable/frameworks/5.53/${pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${pkgname}-${_kf5ver}.tar.xz ../kf5.md5 | cut -d" " -f1`)

build() {
  mkdir -p build
  cd build 
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_SYSCONFDIR=/etc \
    -DKDE_INSTALL_QMLDIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_QCH=ON
  make 
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
  
  cd ${pkgdir}/usr/lib/
  ln -s libKF5Prison.so.5 libKF5Prison.so.1
}

