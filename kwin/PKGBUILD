
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kwin
pkgver=${_plasmaver}
pkgrel=1
pkgdesc='KDE Window Manager'
arch=('x86_64')
url='https://github.com/KDE/kwin'
license=('LGPL')
depends=('qt5-multimedia' 'plasma-framework' 'kcmutils' 'kinit' 'knewstuff' 'xcb-util-cursor'
         'libepoxy' 'kwayland-server' 'kdecoration' 'libinput' 'kscreenlocker' 'kdeclarative' 'breeze'
         'qt5-virtualkeyboard' 'xorg-server' 'qt5-sensors' 'qt5-quickcontrols2')
makedepends=('extra-cmake-modules' 'kdoctools' 'qt5-tools')
groups=('kdeplasma5')
options=('debug')
source=("https://download.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz")
#source=("${pkgname}-${pkgver}.tar.gz::https://github.com/KDE/${pkgname}/archive/${_branch}.tar.gz")
md5sums=(`grep ${pkgname}-${_plasmaver}.tar.xz ../kf5.md5 | cut -d" " -f1`)

prepare () {
  cd ${pkgname}-${pkgver}
  #patch -p1 -i ${srcdir}/closeview.diff
  #sed -i 's|add_subdirectory(tests)|#add_subdirectory(tests)|' ${srcdir}/${pkgname}-${pkgver}/CMakeLists.txt
  #rm -rf po/id/docs
}  

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_LIBEXECDIR=lib \
    -DKDE_INSTALL_SYSCONFDIR=/etc \
    -DKDE_INSTALL_QMLDIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}

