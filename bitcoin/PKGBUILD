
pkgname=bitcoin
pkgver=0.16.3
pkgrel=1
arch=('x86_64')
pkgdesc="Bitcoin is a peer-to-peer network based digital currency"
url="http://www.bitcoin.org/"
license=('MIT')
depends=('boost-libs' 'qt5-base' 'miniupnpc' 'qrencode' 'protobuf' 'libevent' 'zeromq')
makedepends=('boost' 'qt5-tools')
#source=("git://github.com/bitcoin/bitcoin.git")
source=("https://github.com/bitcoin/bitcoin/archive/v${pkgver}.tar.gz"
        "https://github.com/bitcoin/bitcoin/pull/12032/commits/ad8393634a7b86a1da40f4d2533b16b69c0dd26c.diff")
md5sums=('bb069d20ed963f04f47a75a70f329534'
         '61ebed07447391918489e8878c20859f')

prepare() {
  cd ${pkgname}-${pkgver}
  # boost 1.66 patch
  #patch -p1 -i ${srcdir}/ad8393634a7b86a1da40f4d2533b16b69c0dd26c.diff
}

build() {
  cd ${pkgname}-${pkgver}
  #CXXFLAGS="$CXXFLAGS -DBOOST_VARIANT_USE_RELAXED_GET_BY_DEFAULT=1"
  #CXXFLAGS="-std=c++11"

  ./autogen.sh
  ./configure --prefix=/usr \
      --with-incompatible-bdb \
      --with-gui=qt5
  make
}


package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -Dm644 contrib/debian/bitcoin-qt.desktop ${pkgdir}/usr/share/applications/bitcoin.desktop
  install -Dm644 share/pixmaps/bitcoin128.png ${pkgdir}/usr/share/pixmaps/bitcoin128.png

  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
