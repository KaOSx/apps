
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kgpg
arch=('x86_64')
pkgver=${_kdever}
pkgrel=2
pkgdesc="GPG encryption and key management"
url="https://github.com/KDE/kgpg"
license=('GPL' 'LGPL' 'FDL')
depends=('karchive' 'kcodecs' 'kcoreaddons' 'kcrash' 'kdbusaddons'
         'ki18n' 'kiconthemes' 'kjobwidgets' 'kio' 'knotifications' 'kservice' 'kxmlgui' 
         'kwidgetsaddons' 'kwindowsystem' 'sonnet' 'kitemmodels' 'kcompletion' 'kitemviews' 'solid'
         'kauth' 'kconfigwidgets' 'akonadi-contacts' 'gpgme')
makedepends=('extra-cmake-modules' 'kdoctools' 'boost')
groups=('kde' 'kde-utils' 'kde-uninstall' 'utils')
source=($_mirror/${pkgname}-${_kdever}.tar.xz)
md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  mkdir build
  cd build

  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
