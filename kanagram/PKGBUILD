
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kanagram
pkgver=${_kdever}
pkgrel=2
pkgdesc="Letter Order Game"
url="http://kde.org/applications/education/kanagram/"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n' 'kcrash' 'sonnet' 'kconfig' 'kconfigwidgets' 'kcoreaddons' 'kdeclarative' 'kio' 'knewstuff'
         'libkeduvocdocument' 'phonon-qt5')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdeedu-kanagram')
replaces=('kdeedu-kanagram')
groups=('kde' 'kde-edu' 'kde-uninstall' 'education' 'kaos-kids')
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
