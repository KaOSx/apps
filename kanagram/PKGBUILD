
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kanagram
pkgver=${_kdever}
pkgrel=1
pkgdesc="Letter Order Game"
url="https://apps.kde.org/en/kanagram"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n' 'kcrash' 'sonnet' 'kconfig' 'kconfigwidgets' 'kcoreaddons' 'kdeclarative' 'kio' 'knewstuff'
         'libkeduvocdocument' 'phonon-qt5')
makedepends=('extra-cmake-modules' 'kdoctools')
groups=('kde' 'kde-edu' 'kde-uninstall' 'education' 'kaos-kids')
source=("$_mirror/${pkgname}-${_kdever}.tar.xz")
md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
    cmake -B build -S ${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DBUILD_TESTING=OFF
    cmake --build build
}

package() {

    DESTDIR=${pkgdir} cmake --install build
}
