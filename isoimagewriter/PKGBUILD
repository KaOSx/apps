
pkgname=isoimagewriter
pkgver=0.9.2
pkgrel=1
arch=('x86_64')
pkgdesc="Web browser for Plasma Mobile (kf6 version)"
url="https://invent.kde.org/plasma-mobile/angelfish"
license=('GPL2')
depends=('ki18n6' 'kcoreaddons6' 'kwidgetsaddons6' 'kiconthemes6' 'karchive6'
         'kcrash6' 'solid6')
makedepends=('extra-cmake-modules6') 
source=("https://download.kde.org/unstable/isoimagewriter/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('73a7079c654a3cec3f7065e5296b1ce34ff565b894247fc7f9799f7c4d0c41c5')

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      -DBUILD_TESTING=OFF \
      -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
