
pkgname=weston
pkgver=13.0.1
pkgrel=1
pkgdesc='Reference implementation of a Wayland compositor'
arch=('x86_64')
url='https://wayland.freedesktop.org'
license=('MIT')
options=('!libtool')
depends=('libxkbcommon' 'mesa' 'pango' 'poppler-glib' 'mtdev' 'libxcursor' 'glu' 'libunwind'
         'pixman' 'xkeyboard-config' 'colord' 'libwebp' 'libva' 'libinput' 'wayland-protocols'
         'freerdp' 'xwayland' 'pipewire')
makedepends=('meson' 'ninja')
source=("https://gitlab.freedesktop.org/wayland/weston/-/releases/${pkgver}/downloads/${pkgname}-${pkgver}.tar.xz")
sha256sums=('ea1566ab4f5ffce7e9fd4f7a1fca5b30caae4d50023bf459213994094e02b29a')

build() {
  mkdir -p build
  cd build

  meson setup ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --sysconfdir=/etc \
    --buildtype=release \
    --libexec=lib/weston \
    -Ddemo-clients=true \
    -Dsimple-clients=all \
    -Dbackend-rdp=true \
    -Dbackend-drm=false \
    -Dbackend-default=wayland \
    -Dremoting=false \
    -Dpipewire=false
   ninja
}

package() {
  cd build  
  DESTDIR=${pkgdir} ninja install

  install -Dm644 ../${pkgname}-${pkgver}/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
