
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kiriki
pkgver=${_kdever}
pkgrel=2
pkgdesc="Yahtzee-like Dice Game"
arch=('x86_64')
url='https://apps.kde.org/kiriki/'
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons6' 'kconfig6' 'kcrash6' 'kdbusaddons6' 'ki18n6' 'kconfigwidgets6'
         'kiconthemes6' 'kwidgetsaddons6' 'kxmlgui6' 'libkdegames')
makedepends=('extra-cmake-modules' 'kdoctools6')
groups=('kde' 'kde-games' 'kde-uninstall')
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DBUILD_TESTING=OFF \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}

