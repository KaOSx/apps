
pkgname=w3m
pkgver=0.5.3git20220429.1
_pkgver=0.5.3+git20220429-1
_commit=debian-0.5.3-git20220429-1
pkgrel=3
pkgdesc="Pager that can be used as a text-mode WWW browser."
arch=('x86_64')
url="https://w3m.sourceforge.net/"
license=('custom')
depends=('openssl' 'gc' 'ncurses' 'zlib' 'imlib2')
groups=('network-web')
source=("https://github.com/tats/w3m/archive/refs/tags/debian/${_pkgver}.tar.gz")
md5sums=('39f4e992f6049b247854c028447b3c5e')

build() {
	cd ${pkgname}-${_commit}

	./configure \
        --prefix=/usr \
        --libexecdir=/usr/lib \
        --disable-image \
        --with-imagelib=imlib2 \
        --with-termlib=ncurses \
        --disable-w3mmailer \
        --disable-mouse 
    make
}

package() {
	cd ${pkgname}-${_commit}
	make DESTDIR=${pkgdir} install

	install -d ${pkgdir}/usr/share/{doc,licenses}/${pkgname}
	find doc/* | grep -v CVS | xargs -i install -m644 "{}" ${pkgdir}/usr/share/doc/${pkgname}
	ln -s ../../doc/${pkgname}/README ${pkgdir}/usr/share/licenses/${pkgname}
}
