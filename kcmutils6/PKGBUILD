
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kcmutils6
_pkgname=kcmutils
pkgver=${_kf6ver}
pkgrel=4
pkgdesc='Utilities for KDE System Settings modules'
arch=('x86_64')
url='https://invent.kde.org/frameworks/kcmutils'
license=('LGPL')
depends=('kwindowsystem6' 'kactivities6' 'kitemviews6' 'kconfigwidgets6' 'kcoreaddons6'
         'kguiaddons6' 'ki18n6' 'kservice6' 'kxmlgui6' 'kpackage6' 'kwidgetsaddons6')
makedepends=('extra-cmake-modules6')
groups=('kf6')
#source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-${_kf6ver}.tar.xz ../kf5.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/frameworks/${_pkgname}.git")
md5sums=('SKIP')

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
