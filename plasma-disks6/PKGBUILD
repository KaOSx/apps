

# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=plasma-disks6
_pkgname=plasma-disks
pkgver=${_plasmaver}
pkgrel=1
pkgdesc="Monitors S.M.A.R.T. capable devices for imminent failure."
url="https://invent.kde.org/plasma/plasma-disks"
arch=('x86_64')
license=('LGPL')
depends=('kcoreaddons6' 'kdbusaddons6' 'knotifications6' 'ki18n6' 'solid6' 'kservice6' 'kio6' 'kauth6'
         'kcmutils6' 'smartmontools')
makedepends=('extra-cmake-modules')
groups=('kdeplasma6')
source=("$_mirror/${_pkgname}-${_plasmaver}.tar.xz")
md5sums=(`grep ${_pkgname}-${_plasmaver}.tar.xz ../kf6.md5 | cut -d" " -f1`)

build() {
    cmake -B build -S ${_pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
    cmake --build build
}

package() {

    DESTDIR=${pkgdir} cmake --install build
}
