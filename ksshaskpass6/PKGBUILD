
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ksshaskpass6
_pkgname=ksshaskpass
pkgver=${_plasmaver}
pkgrel=1
pkgdesc="Front-end for ssh-add which stores the password of the sh key in KWallet."
arch=('x86_64')
url="https://invent.kde.org/plasma/ksshaskpass"
license=('LGPL')
depends=('kcoreaddons6' 'ki18n6' 'kwallet6' 'kwidgetsaddons6')
makedepends=('extra-cmake-modules' 'kdoctools6')
groups=('kdeplasma6')
source=("https://download.kde.org/stable/plasma/${pkgver}/${_pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${_pkgname}-${_plasmaver}.tar.xz ../kf5.md5 | cut -d" " -f1`)

build() {
  cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_WITH_QT6=ON \
    -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=${_kf5ver} \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
