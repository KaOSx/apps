
pkgname=croeso
pkgver=0.6.3
pkgrel=1
pkgdesc="First run settings and info app for KaOS, written in QML"
arch=('x86_64')
url="http://kaosx.us/"
license=('GPL')
depends=('qt5-quickcontrols2' 'qt5-webview' 'plasma-framework' 'imagemagick')
makedepends=('git')
source=("git://github.com/KaOSx/croeso.git")
md5sums=('SKIP')

build() {
    cd croeso/
   
    /usr/lib/qt5/bin/qmake croeso.pro
    make
}

package() {
    cd croeso/
   
    make INSTALL_ROOT=${pkgdir}/ install
}
