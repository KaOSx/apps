
pkgname=ktp-send-file
pkgver=0.6.0
pkgrel=1
pkgdesc="A File manager plugin to launch a file transfer job with a specified contact"
arch=('x86_64')
url="http://www.kde.org"
license=('GPL')
depends=('ktp-filetransfer-handler' 'ktp-contact-list')
makedepends=('cmake' 'automoc4')
conflicts=('telepathy-kde-send-file')
replaces=('telepathy-kde-send-file')
provides=('telepathy-kde-send-file')
groups=('kde-telepathy')
install=${pkgname}.install
source=("ftp://mirrors.mit.edu/kde/stable/kde-telepathy/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('a341e98cc4654d0d3dbf9b55ff9b45dd')

build() {
  cd "${srcdir}"
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "${srcdir}"/build
  make DESTDIR="${pkgdir}" install
}
