
pkgname=htop
pkgver=3.1.2
pkgrel=1
pkgdesc="Cross-platform interactive process viewer"
arch=('x86_64')
url="https://htop.dev/"
license=('GPL')
depends=('ncurses')
makedepends=('python3')
groups=('utils')
source=("https://github.com/htop-dev/htop/archive/${pkgver}.tar.gz")
md5sums=('2177554fcc3a5390f85313fae3729d7d')

build() {
    cd ${pkgname}-${pkgver}

    ./autogen.sh
    ./configure --prefix=/usr \
            --enable-unicode \
            --enable-openvz \
            --enable-vserver
    make 
    }

    package() {
    cd ${pkgname}-${pkgver}

    make DESTDIR=${pkgdir} install
}
