
pkgname=htop
pkgver=3.2.0
pkgrel=1
pkgdesc="Cross-platform interactive process viewer"
arch=('x86_64')
url="https://htop.dev/"
license=('GPL')
depends=('ncurses')
makedepends=('python3')
groups=('utils')
source=("https://github.com/htop-dev/htop/releases/download/${pkgver}/htop-${pkgver}.tar.xz")
sha256sums=('e0f645d4ac324f2c4c48aaa7a3a96d007b95516559550be0b56e423fc5b6d783')

build() {
    cd ${pkgname}-${pkgver}

    ./autogen.sh
    ./configure --prefix=/usr \
        --enable-unicode \
        --enable-openvz \
        --enable-vserver
    make 
    }

    package() {
    cd ${pkgname}-${pkgver}

    make DESTDIR=${pkgdir} install
}
