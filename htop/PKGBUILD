
pkgname=htop
pkgver=3.0.0
pkgrel=1
pkgdesc="Cross-platform interactive process viewer"
arch=('x86_64')
url="https://htop.dev/"
license=('GPL')
depends=('ncurses')
makedepends=('python3')
groups=('utils')
source=("https://github.com/htop-dev/htop/archive/${pkgver}.tar.gz")
md5sums=('695cb3f6d6eae13f53c74c491da449ea')

build() {
	cd ${pkgname}-${pkgver}
	
	./autogen.sh
	./configure --prefix=/usr \
	       --enable-unicode \
	       --enable-openvz \
	       --enable-vserver 
	make 
}

package() {
	cd ${pkgname}-${pkgver}
	
	make DESTDIR=${pkgdir} install 
}
