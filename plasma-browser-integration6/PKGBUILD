
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=plasma-browser-integration6
_pkgname=plasma-browser-integration
pkgver=${_plasmaver}
pkgrel=1
arch=('x86_64')
pkgdesc="Components necessary to integrate browsers into the Plasma Desktop"
url="https://invent.kde.org/plasma/plasma-browser-integration"
license=('GPL')
depends=('kio6' 'ki18n6' 'kcoreaddons6' 'kconfig6' 'kcrash6' 'kdbusaddons6' 'knotifications6'
         'krunner6' 'purpose6' 'kfilemetadata6' 'kjobwidgets6' 'kservice6' 'kstatusnotifieritem'
         'kactivities6' 'plasma-workspace6')
makedepends=('extra-cmake-modules' 'kdoctools6')
source=("https://download.kde.org/stable/plasma/${pkgver}/${_pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${_pkgname}-${_plasmaver}.tar.xz ../kf6.md5 | cut -d" " -f1`)

build() {
  cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DINSTALL_CHROME_MANIFEST=ON
  cmake --build build
}

package() {

    DESTDIR=${pkgdir} cmake --install build
}
