
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=khangman
pkgver=${_kdever}
pkgrel=1
pkgdesc="Hangman Game"
url="http://kde.org/applications/education/khangman/"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n' 'kcrash' 'kcompletion' 'kconfig' 'kcoreaddons' 'kconfigwidgets' 'kio' 'knewstuff' 
         'knotifications' 'kxmlgui' 'kdeedu-data' 'libkeduvocdocument' 'phonon-qt5' 'qt5-declarative')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdeedu-khangman')
replaces=('kdeedu-khangman')
#groups=('kde' 'kdeedu' 'kde-uninstall' 'education' 'kaos-kids')
install=${pkgname}.install
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
#md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
md5sums=('f1425c0b337b52dcfc43f6c00a490ded')

prepare() {
  cd $pkgname-${pkgver}
  #sed -i -e 's|add_subdirectory( doc )|#add_subdirectory( doc )|' ${srcdir}/${pkgname}/CMakeLists.txt
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
