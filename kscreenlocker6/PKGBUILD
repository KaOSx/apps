
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kscreenlocker6
_pkgname=kscreenlocker
arch=('x86_64')
pkgver=${_plasmaver}
pkgrel=1
pkgdesc="Library and components for secure lock screen architecture."
url="https://invent.kde.org/plasma/kscreenlocker"
license=('GPL' 'LGPL' 'FDL')
depends=('kcrash6' 'kcmutils6' 'kio6' 'kglobalaccel6' 'ki18n6' 'kidletime6' 'knotifications6'
         'solid6' 'kwindowsystem6' 'kxmlgui6' 'ksvg' 'libplasma' 'kwayland6' 'layer-shell-qt6' 'libkscreen6')
makedepends=('extra-cmake-modules' 'kdoctools6')
groups=('kdeplasma6')
source=("https://download.kde.org/stable/plasma/${pkgver}/${_pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${_pkgname}-${_plasmaver}.tar.xz ../kf6.md5 | cut -d" " -f1`)

prepare() {
  cd ${_pkgname}-${pkgver}

  #patch -p1 -i ${srcdir}/b50674debeab0d70c2d2b567a0ab973abce7fb31.diff
}

build() {
  cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_SKIP_RPATH=ON \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_LIBEXECDIR=/usr/lib \
    -DBUILD_TESTING=OFF \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
