
pkgname=socat
pkgver=1.7.4.0
pkgrel=1
arch=('x86_64')
pkgdesc='Relay for bidirectional data transfer between two independent data channels.'
url='http://www.dest-unreach.org/socat/'
license=('GPL2')
depends=('openssl' 'readline')
source=("http://www.dest-unreach.org/socat/download/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('c8273b30e933be0ad8d509ae75e19ecedf1a60081bb942ed36f2dd8950de3d58')

build() {
    cd ${pkgname}-${pkgver}
    
    ./configure \
        --prefix=/usr \
        --mandir=/usr/share/man \
    make
}

package() {
    cd ${pkgname}-${pkgver}
    
    make DESTDIR=${pkgdir} install
}
