
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ktexttemplate
pkgver=${_kf6ver}
pkgrel=1
pkgdesc='Library to allow application developers to separate the structure of documents from the data they contain.'
arch=('x86_64')
url='https://invent.kde.org/frameworks/ktexttemplate'
license=('LGPL')
depends=('qt6-declarative')
makedepends=('extra-cmake-modules')
groups=('kf6')
source=("https://download.kde.org/stable/frameworks/5.99/${pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${pkgname}-$_kf6ver.tar.xz ../kf6.md5 | cut -d" " -f1`)

prepare() {
  cd ${pkgname}-${pkgver}

  #patch -p1 -i ${srcdir}/99bb4f0250f8f394cbefeaa15111c196d72ab83f.diff
}

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
