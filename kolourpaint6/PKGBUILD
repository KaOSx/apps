
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kolourpaint6
_pkgname=kolourpaint
pkgver=${_kdever}
pkgrel=2
pkgdesc="Painting program to quickly create raster images plus useful as a touch-up tool and simple image editing tasks."
url="http://kde.org/applications/graphics/kolourpaint/"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n6' 'kguiaddons6' 'kwidgetsaddons6' 'kio6' 'kxmlgui6' 'ktextwidgets6'
         'kjobwidgets6' 'libkexiv6' 'libksane6')
makedepends=('extra-cmake-modules6' 'kdoctools6')
#groups=('kde-graphics')
#source=("$_mirror/${pkgname}-${_kdever}.tar.xz")
#md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/graphics/${_pkgname}.git")
md5sums=('SKIP')

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
