
pkgname=pnpm
pkgver=8.14.0
pkgrel=1
pkgdesc='Fast, disk space efficient package manager'
arch=('x86_64')
url="https://pnpm.io"
license=('MIT')
depends=('nodejs')
makedepends=('pnpm')
source=("https://github.com/pnpm/pnpm/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('da36c7fd3cd79d9b32d7c35a77b448f4e9da59e337028e30f62b202efc091471')

package() {
  npm install -g \
    --cache ${srcdir}/npm-cache \
    --prefix ${pkgdir}/usr \
    pnpm

  cd ${pkgdir}/usr/lib/node_modules/pnpm
  rm -r dist/node-gyp-bin
  rm -r dist/vendor

  install -Dm644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}/
}
