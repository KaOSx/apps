
pkgname=qimageblitz-qt5
_pkgname=qimageblitz
pkgver=0.0.6.1
pkgrel=2
pkgdesc="An interm image effect library, Qt5 version"
arch=('x86_64')
url="http://www.kde-org"
license=('custom')
depends=('qt5-base')
makedepends=('cmake' 'subversion')
conflicts=('qimageblitz')
provides=('qimageblitz')
replaces=('qimageblitz')
source=("svn://anonsvn.kde.org/home/kde/trunk/kdesupport/qimageblitz")
md5sums=('SKIP')

build() {
  cd ${srcdir}
  mkdir build
  
  cd build
  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr 
  make
}

package() {
  cd ${srcdir}/build
  
  make DESTDIR=${pkgdir} install
}
