
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkdegames
pkgver=${_kdever}
pkgrel=1
pkgdesc="Shared libraries for KDE games"
arch=('x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons' 'kwidgetsaddons' 'kcodecs' 'karchive' 'kconfig' 'kdbusaddons' 'kdnssd' 'kdeclarative'
         'ki18n' 'kguiaddons' 'kservice' 'kconfigwidgets' 'kitemviews' 'kiconthemes' 'kcompletion' 'kjobwidgets'
         'ktextwidgets' 'kglobalaccel' 'kxmlgui' 'kcrash' 'kbookmarks' 'kio' 'knewstuff' 'kdelibs4support'
         'libsndfile' 'openal')
makedepends=('pkg-config' 'extra-cmake-modules' 'kdoctools' 'git')
conflicts=('kdegames-libkdegames'
	   'kdegames-bomber'
	   'kdegames-kapman'
	   'kdegames-katomic'
	   'kdegames-kblackbox'
	   'kdegames-kblocks'
	   'kdegames-kbreakout'
	   'kdegames-kdiamond'
	   'kdegames-kigo'
	   'kdegames-kgoldrunner'
	   'kdegames-killbots'
	   'kdegames-kjumpingcube'
	   'kdegames-klickety'
	   'kdegames-klines'
	   'kdegames-knetwalk'
	   'kdegames-kolf'
	   'kdegames-kollision'
	   'kdegames-konquest'
	   'kdegames-kreversi'
	   'kdegames-kshisen'
	   'kdegames-ksirk'
	   'kdegames-kspaceduel'
	   'kdegames-ksquares'
	   'kdegames-ksudoku'
	   'kdegames-ksnakeduel'
	   'kdegames-kubrick'
	   'kdegames-lskat'
	   'kdegames-palapeli'
	   'kdegames-picmi')
replaces=('kdegames-libkdegames'
	   'kdegames-libkmahjongg'
	   'kdegames-bomber'
	   'kdegames-kapman'
	   'kdegames-katomic'
	   'kdegames-kblackbox'
	   'kdegames-kblocks'
	   'kdegames-kbreakout'
	   'kdegames-kdiamond'
	   'kdegames-kigo'
	   'kdegames-kgoldrunner'
	   'kdegames-killbots'
	   'kdegames-kjumpingcube'
	   'kdegames-klickety'
	   'kdegames-klines'
	   'kdegames-knetwalk'
	   'kdegames-kolf'
	   'kdegames-kollision'
	   'kdegames-konquest'
	   'kdegames-kreversi'
	   'kdegames-kshisen'
	   'kdegames-ksirk'
	   'kdegames-kspaceduel'
	   'kdegames-ksquares'
	   'kdegames-ksudoku'
	   'kdegames-ksnakeduel'
	   'kdegames-kubrick'
	   'kdegames-lskat'
	   'kdegames-palapeli'
	   'kdegames-picmi')
groups=('kde' 'kde-games' 'kde-uninstall')
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  cd ${srcdir}
  #sed -e "s/Qt5::core/Qt5::core KF5::KWidgetsAddons/" -i ${srcdir}/$pkgname/libkdegames/CMakeLists.txt
  
  mkdir -p build
  cd build

  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
