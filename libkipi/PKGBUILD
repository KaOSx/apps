
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkipi
pkgver=${_kdever}
#pkgver=15.07.70
pkgrel=1
pkgdesc="Qt/C++ interface to use kipi-plugins from KDE image management programs"
arch=('x86_64')
url='https://invent.kde.org/graphics/libkipi'
license=('GPL' 'LGPL' 'FDL')
depends=('ki18n' 'kconfig' 'kxmlgui' 'kservice')
makedepends=('extra-cmake-modules' 'kdoctools' 'pkg-config')
groups=('kde-graphics')
conflicts=('kdegraphics-libkipi')
provides=('kdegraphics-libkipi')
replaces=('kdegraphics-libkipi')
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)
#source=("git://anongit.kde.org/libkipi.git")
#md5sums=('SKIP')

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
