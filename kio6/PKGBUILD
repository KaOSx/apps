
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kio6
_pkgname=kio
pkgver=${_kf5ver}
pkgrel=1
pkgdesc='Framework that implements almost all the file management functions you will ever need'
arch=('x86_64')
url='https://invent.kde.org/frameworks/kio'
license=('LGPL')
depends=('karchive6' 'kconfig6' 'kcoreaddons6' 'kcrash6' 'kdbusaddons6' 'ki18n6' 'kservice6' 'solid6'
         'kbookmarks6' 'kcompletion6' 'kconfigwidgets6' 'kguiaddons6' 'kiconthemes6' 'kitemviews6' 'kjobwidgets6'
         'kwidgetsaddons6' 'kwindowsystem6' 'kauth6' 'kwallet6' 'knotifications6' 'kded6'
         'ktextwidgets6' 'krb5' 'qt6-5compat')
makedepends=('extra-cmake-modules' 'kdoctools6' 'qt6-tools')
groups=('kf6')
source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz"
        "https://invent.kde.org/frameworks/kio/-/commit/cdef47d3e7262df62a109ae526a55132eecf942e.diff"
        "https://invent.kde.org/frameworks/kio/-/commit/20eeee2cfb7a25d5862c60febd77d57525f73445.diff")
md5sums=(`grep ${_pkgname}-${_kf5ver}.tar.xz ../kf5.md5 | cut -d" " -f1`
         'a25087a4ae88d86b00e1db326d05723e'
         '16aff853891be17bd0d5927dd0d505b6')

prepare() {
  cd ${_pkgname}-${pkgver}

  patch -p1 -i ${srcdir}/cdef47d3e7262df62a109ae526a55132eecf942e.diff
  patch -p1 -i ${srcdir}/20eeee2cfb7a25d5862c60febd77d57525f73445.diff
}

build() {
  cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_WITH_QT6=ON \
    -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=${_kf5ver} \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
