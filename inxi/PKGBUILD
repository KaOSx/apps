
pkgname=inxi
pkgver=3.2.02.2
_commit=1e2d470c695ddeea934c0906e6630dcb282848a6
pkgrel=2
pkgdesc="Script to get system information"
arch=('x86_64')
url="https://smxi.org/docs/inxi.htm"
license=('GPL')
depends=('mesa-demos' 'coreutils' 'pciutils' 'procps-ng' 'dmidecode' 'perl')
source=("https://github.com/smxi/inxi/archive/${_commit}.zip")
md5sums=('7829b31a2c888b6bef6ff97a57f70c47')

package() {
  cd ${pkgname}-${_commit}
  
  install -D -m755 inxi ${pkgdir}/usr/bin/inxi
  install -D -m755 inxi.1 ${pkgdir}/usr/share/man/man1/inxi.1
}

