
pkgname=kdev-php
pkgver=5.6.1
_pkgver=5.6.1
pkgrel=1
pkgdesc="PHP plugin for Kdevelop"
arch=('x86_64')
url="https://kde.org/applications/en/kdev-php?category=development"
license=('GPL')
depends=('kdevelop' 'kdevelop-pg-qt' 'threadweaver' 'ktexteditor' 'ki18n')
makedepends=('extra-cmake-modules' 'kdoctools')
groups=('programming')
options=('!makeflags')
replaces=('kdevelop-php' 'kdevelop-php-docs')
conflicts=('kdevelop-php' 'kdevelop-php-docs')
source=("https://download.kde.org/stable/kdevelop/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('702f12a1ad0caadd020ac30294b70ec6426e7961ac439d270f3010748b3f7a5a')

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_SYSCONFDIR=/etc \
    -DKDE_INSTALL_QMLDIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
