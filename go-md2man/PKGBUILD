
pkgname=go-md2man
pkgver=2.0.0
pkgrel=2
pkgdesc='Pure Go written standard markdown formatted documents to manpages converter.'
arch=('x86_64')
url='https://github.com/cpuguy83/go-md2man'
license=('MIT')
makedepends=('git' 'go')
source=("${pkgname}.tar.gz::https://github.com/cpuguy83/go-md2man/archive/v${pkgver}.tar.gz")
md5sums=('873f327dde3da82c821abc6e86d18f7b')

build() {
  cd ${pkgname}-${pkgver}
  GOFLAGS="-mod=vendor -trimpath"

  go build -o go-md2man .
  ./go-md2man -in=go-md2man.1.md -out=go-md2man.1
}

package() {
  cd ${pkgname}-${pkgver}
  install -Dm755 go-md2man ${pkgdir}/usr/bin/go-md2man
  install -Dm755 go-md2man.1 ${pkgdir}/usr/share/man/man1/go-md2man.1
}
