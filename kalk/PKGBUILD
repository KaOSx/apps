
pkgname=kalk
pkgver=22.02
pkgrel=1
arch=('x86_64')
pkgdesc="Powerful cross-platform calculator application built with the Kirigami framework"
url="https://invent.kde.org/plasma-mobile/kalk"
license=('GPLv3')
depends=('qt5-quickcontrols2' 'qtfeedback' 'kconfig' 'kirigami' 'ki18n'
         'kcoreaddons' 'kunitconversion')
makedepends=('extra-cmake-modules' 'qt5-tools')
source=("https://download.kde.org/stable/plasma-mobile/${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('f07829c4885b5e518529eabb488f69c38d5416e729b5242e61d989ccb805e85e')

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release \
      -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
