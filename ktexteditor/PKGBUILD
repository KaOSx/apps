
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=ktexteditor
pkgver=${_kf5ver}
pkgrel=2
pkgdesc='KTextEditor provides a powerful text editor component that you can embed in your application'
arch=('x86_64')
url='https://github.com/KDE/ktexteditor'
license=('LGPL')
depends=('karchive' 'kconfig' 'kguiaddons' 'ki18n' 'kio' 'kparts' 'sonnet' 'kiconthemes' 'syntax-highlighting')
makedepends=('extra-cmake-modules')
groups=('kf5')
source=("http://download.kde.org/stable/frameworks/5.44/${pkgname}-${pkgver}.tar.xz"
        "https://github.com/KDE/ktexteditor/commit/c81af5aa1d4f6e0f8c44b2e85ca007ba2a1e4590.diff")
md5sums=(`grep ${pkgname}-$_kf5ver.tar.xz ../kf5.md5 | cut -d" " -f1`
         'ff481747de26a8023af6c34cd66221e8')

prepare() {
  cd ${pkgname}-${pkgver}
  # CVE-2018-10361: privilege escalation
  patch -p1 -i ${srcdir}/c81af5aa1d4f6e0f8c44b2e85ca007ba2a1e4590.diff
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_SYSCONFDIR=/etc \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
