
pkgname=freerdp
_pkgname=FreeRDP
pkgver=2.4.0
_pkgver=2.4.0
_commit=f8c9f438436a4492e37011396148d804f7e3651f
pkgrel=1
pkgdesc="Free implementation of the Remote Desktop Protocol (RDP)."
arch=('x86_64')
url="https://www.freerdp.com/"
license=('Apache')
depends=('openssl' 'libxcursor' 'libcups' 'alsa-lib' 'libxext' 'libxdamage'
        'ffmpeg' 'libxkbfile' 'libxinerama' 'libxv' 'pulseaudio' 'libxrender' 
        'libxfixes' 'gst-plugins-base' 'libxkbcommon' 'libxrandr' 'libjpeg-turbo'
        'pcsclite' 'mbedtls' 'dbus-glib' 'wayland' 'gsm' 'lame' 'faad2' 'faac'
        'libsoxr' ) # 'x264' 
makedepends=('krb5' 'cmake' 'damageproto' 'xmlto' 'docbook-xsl')
#source=("https://github.com/FreeRDP/FreeRDP/archive/${_commit}.zip")
source=("https://pub.freerdp.com/releases/${pkgname}-${_pkgver}.tar.gz")
sha256sums=('10ec9b06d74182b354ae288c8e621d94c0fb189b0c3b14a59867ab4c414c08b5')

build() {
  cmake -B build -S ${pkgname}-${_pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DWITH_WAYLAND=ON \
    -DWITH_PULSE=ON \
    -DWITH_CUPS=ON \
    -DWITH_PCSC=ON \
    -DWITH_JPEG=ON \
    -DWITH_CAIRO=ON \
    -DWITH_SWSCALE=ON \
    -DWITH_MBEDTLS=ON \
    -DWITH_GSM=ON \
    -DWITH_LAME=ON \
    -DWITH_FAAD2=ON \
    -DWITH_FAAC=ON \
    -DWITH_SOXR=ON \
    -DWITH_GSSAPI=ON \
    -DWITH_CHANNELS=ON \
    -DWITH_CLIENT_CHANNELS=ON \
    -DWITH_SERVER_CHANNELS=ON \
    -DWITH_VAAPI=ON \
    -DCHANNEL_URBDRC_CLIENT=ON \
    -DWITH_SERVER=ON
    #-DWITH_X264=ON \
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
