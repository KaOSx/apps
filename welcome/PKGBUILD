
pkgname=welcome
pkgver=6.4
pkgrel=1
pkgdesc="Live Welcome app for KaOS"
arch=('x86_64')
url="http://kaosx.us/"
license=('GPL')
depends=('qt5-quickcontrols2' 'plasma-framework')
makedepends=('git')
source=("git://github.com/KaOSx/welcome_qml.git")
md5sums=('SKIP')

build() {
    cd welcome_qml/
   
    /usr/lib/qt5/bin/qmake welcome.pro
    make
}

package() {
    cd welcome_qml/
   
    make INSTALL_ROOT=${pkgdir}/ install
}
