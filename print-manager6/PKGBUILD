
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=print-manager6
_pkgname=print-manager
pkgver=${_kdever}
pkgrel=2
pkgdesc="A KDE tool for managing print jobs and printers"
url="https://invent.kde.org/utilities/print-manager"
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kconfig6' 'kconfigwidgets6' 'kcoreaddons6' 'kdbusaddons6' 'kiconthemes6'
         'ki18n6' 'kcmutils6' 'kio6' 'knotifications6' 'plasma-framework6'
         'kwidgetsaddons6' 'kwindowsystem6' 'libcups' 'qt6-tools' 'samba' 'qt6-5compat')
makedepends=('extra-cmake-modules6' 'kdoctools6')
#groups=('kde' 'kde-utils' 'kde-uninstall')
#source=("$_mirror/${pkgname}-$_kdever.tar.xz"
#        's-c-p.diff')
#md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`
#         '67a5a9e3c84d53d61fbec8ce44094d68')
source=("git+https://invent.kde.org/utilities/${_pkgname}.git"
        's-c-p.diff')
md5sums=('SKIP'
         '9a9e6ca561f286fec2b8262c7c05eb02')

prepare() {
  cd ${_pkgname}

  patch -p1 -i ${srcdir}/s-c-p.diff
}

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
