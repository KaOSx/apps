
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kapidox
pkgver=${_kf5ver}
pkgrel=3
pkgdesc='Frameworks API Documentation Tools'
arch=('x86_64')
url='https://github.com/KDE/kapidox'
license=('LGPL')
depends=('python3-jinja' 'pyyaml')
makedepends=('python3-build' 'python3-installer' 'python3-setuptools' 'python3-wheel' 'qt5-base')
groups=('kf5')
source=("https://download.kde.org/stable/frameworks/5.101/${pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${pkgname}-$_kf5ver.tar.xz ../kf5.md5 | cut -d" " -f1`)

build() {
  cd ${pkgname}-${pkgver}

  python3 -m build -nw
}

package() {
  cd ${pkgname}-${pkgver}

  python3 -m installer --destdir=${pkgdir} dist/*.whl
}
