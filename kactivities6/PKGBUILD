
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kactivities6
_pkgname=kactivities
pkgver=${_kf5ver}
pkgrel=1
pkgdesc="Core components for the KDE Activity concept"
arch=('x86_64')
url='https://invent.kde.org/frameworks/kactivities'
license=('LGPL')
depends=('qt6-declarative' 'boost-libs' 'kconfig6' 'kcoreaddons6' 'kwindowsystem6')
makedepends=('extra-cmake-modules' 'boost')
#options=('debug')
source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${_pkgname}-$_kf5ver.tar.xz ../kf5.md5 | cut -d" " -f1`)

prepare() {
  cd ${_pkgname}-${pkgver}

  #patch -p1 -i ${srcdir}/plugin_dir.diff
}

build() {
  cmake -B build -S ${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_WITH_QT6=ON \
    -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=${_kf5ver} \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
