
pkgname=libtorrent-rasterbar
pkgver=1.2.10
_pkgver=1_2_10
pkgrel=3
pkgdesc="A C++ library that aims to be a good alternative to all the other bittorrent implementations around"
url="https://libtorrent.org/"
arch=('x86_64')
license=('custom')
depends=('boost-libs' 'python3' 'geoip')
makedepends=('boost')
source=("https://github.com/arvidn/libtorrent/releases/download/libtorrent-${pkgver}/${pkgname}-${pkgver}.tar.gz"
        "https://patch-diff.githubusercontent.com/raw/arvidn/libtorrent/pull/5026.diff")
md5sums=('ebacb206c8a9f76ce5d8da182c4a829b'
         '7b0aaa9b44a0392d0505a34d687576c9')

build() {
  cd ${pkgname}-${pkgver}
  # https://github.com/arvidn/libtorrent/pull/5026
  patch -p1 -i ${srcdir}/5026.diff
  
  #CFLAGS="-O -std=c++14"  \
  PYTHON=/usr/bin/python3 \
  PYTHON_VERSION=3.8 \
  ./configure --prefix=/usr \
    --enable-python-binding \
    --with-boost-python="boost_python3"
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install
  
  install -D COPYING ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
