
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=elisa
pkgver=${_kdever}
pkgrel=1
arch=('x86_64')
pkgdesc="Music Player"
url="https://community.kde.org/Elisa"
license=('GPL')
depends=('ki18n6' 'kdeclarative6' 'kcoreaddons6' 'kfilemetadata6' 'kxmlgui6' 'kconfig6'
         'kcmutils6' 'qt6-multimedia' 'qt6-websockets' 'kirigami6' 'qqc2-desktop-style6') # 'kdsoap' 'upnp-qt')
makedepends=('extra-cmake-modules' 'kdoctools6')
conflicts=('elisa6')
replaces=('elisa6')
source=("$_mirror/${pkgname}-${_kdever}.tar.xz")
md5sums=(`grep ${pkgname}-${_kdever}.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

prepare () {
  cd ${pkgname}-${pkgver}

  #patch -p1 -i ${srcdir}/618cf9b589ef9dd58e3ec3dd7450a80f10e118f8.diff
  #sed -e "s|backgroundColor: simpleMode|//backgroundColor: simpleMode|" -i src/qml/BasicPlayListAlbumHeader.qml
}

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE_INSTALL_LIBDIR=lib \
    -DQT_MAJOR_VERSION=6
cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
