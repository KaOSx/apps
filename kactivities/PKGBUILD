
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=kactivities
pkgver=${_kf5ver}
pkgrel=1
pkgdesc="Core components for the KDE's Activities"
arch=('x86_64')
url='https://github.com/KDE/kactivities'
license=('LGPL')
depends=('qt5-declarative' 'boost-libs' 'kdbusaddons' 'kio' 'kwindowsystem' 'kservice' 'kdeclarative'
         'kcmutils')
makedepends=('extra-cmake-modules' 'boost')
options=('debug')
source=("http://download.kde.org/stable/frameworks/5.41/${pkgname}-${pkgver}.tar.xz")
md5sums=(`grep ${pkgname}-$_kf5ver.tar.xz ../kf5.md5 | cut -d" " -f1`)

prepare() {
  cd ${pkgname}-${pkgver}
  
  #patch -p1 -i ${srcdir}/plugin_dir.diff
}

build() {
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_QMLDIR=/usr/lib/qt5/qml \
    -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt5/mkspecs/modules \
    -DKDE_INSTALL_QTPLUGINDIR=/usr/lib/qt5/plugins \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build
  
  make DESTDIR=${pkgdir} install
}
