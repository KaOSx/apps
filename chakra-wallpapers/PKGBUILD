}

package_chakra-wallpapers-dharma() {

	pkgdesc="Chakra Dharma Theme by Malcer"
	groups=("kde-uninstall" "chakra-wallpapers")

	_WALLPAPER="dharma"

	cd ${srcdir}/dharma
	
	mkdir -pv ${pkgdir}/usr/share/wallpapers/$_WALLPAPER/contents/images
	cd ${srcdir}/dharma/contents
	cp -Rv * ${pkgdir}/usr/share/wallpapers/$_WALLPAPER/contents/images
	cd $pkgdir/usr/share/wallpapers/$_WALLPAPER/contents/images

	cp -v ${srcdir}/dharma/metadata.desktop $pkgdir/usr/share/wallpapers/$_WALLPAPER
	cp -v ${srcdir}/dharma/screenshot.png $pkgdir/usr/share/wallpapers/$_WALLPAPER/contents
}
