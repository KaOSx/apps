
pkgname=scons
_pkgname=SCons
pkgver=4.6.0.post1
_pkgver=4.6.0.post1
pkgrel=2
pkgdesc="Extensible Python-based build utility"
arch=('x86_64')
url="https://scons.org"
license=('MIT')
depends=('python3')
makedepends=('python3-build' 'python3-installer' 'python3-setuptools' 'python3-wheel')
groups=('programming')
source=("https://pypi.io/packages/source/S/SCons/${_pkgname}-${_pkgver}.tar.gz")
sha256sums=('d467a34546f5366a32e4d4419611d0138dd680210f24aa8491ebe9e4b83456cf')

build() {
  cd ${_pkgname}-${pkgver}

  python3 -m build -nw
}

package() {
  cd ${_pkgname}-${_pkgver}

  python3 -m installer --destdir=${pkgdir} dist/*.whl
  install -D -m644 README.rst ${pkgdir}/usr/share/licenses/${pkgname}/README
}

