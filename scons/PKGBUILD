
pkgname=scons
_pkgname=SCons
pkgver=4.20
_pkgver=4.2.0
pkgrel=1
pkgdesc="Extensible Python-based build utility"
arch=('x86_64')
url="https://scons.org"
license=('MIT')
depends=('python3')
makedepends=('python3-setuptools')
groups=('programming')
source=("https://pypi.io/packages/source/S/SCons/${_pkgname}-${_pkgver}.tar.gz")
sha256sums=('691893b63f38ad14295f5104661d55cb738ec6514421c6261323351c25432b0a')

package() {
  cd ${_pkgname}-${_pkgver}

  python3 setup.py install \
    --prefix=/usr \
    --install-data=/usr/share \
    --optimize=1 \
    --root="${pkgdir}" \

  install -D -m644 README.rst ${pkgdir}/usr/share/licenses/${pkgname}/README
}

