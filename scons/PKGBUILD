
pkgname=scons
_pkgname=SCons
pkgver=4.5.1
_pkgver=4.5.1
pkgrel=1
pkgdesc="Extensible Python-based build utility"
arch=('x86_64')
url="https://scons.org"
license=('MIT')
depends=('python3')
makedepends=('python3-setuptools')
groups=('programming')
source=("https://pypi.io/packages/source/S/SCons/${_pkgname}-${_pkgver}.tar.gz")
sha256sums=('9daeabe4d87ba2bd4ea15410765fc1ed2d931b723e4dc730a487a3911b9a1738')

package() {
  cd ${_pkgname}-${_pkgver}

  python3 setup.py install \
    --prefix=/usr \
    --install-data=/usr/share \
    --optimize=1 \
    --root="${pkgdir}" \

  install -D -m644 README.rst ${pkgdir}/usr/share/licenses/${pkgname}/README
}

