
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=wacomtablet
pkgver=${_plasmaver}
pkgrel=1
pkgdesc="Implements a GUI for the Wacom Linux Drivers and extends it with profile support to handle 
         different button / pen layouts per profile."
arch=('x86_64')
url='https://invent.kde.org/plasma/wacomtablet'
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons6' 'ki18n6' 'kglobalaccel6' 'kconfig6' 'kxmlgui6' 'kwidgetsaddons6' 'kwindowsystem6' 'knotifications6'
         'kdbusaddons6' 'plasma-framework6' 'kcmutils6' 'kio6' 'plasma5support' 'xf86-input-wacom')
makedepends=('extra-cmake-modules' 'kdoctools6')
groups=('kdeplasma6')
source=("https://download.kde.org/stable/plasma/${pkgver}/${_pkgname}-${pkgver}.tar.xz"
        "https://invent.kde.org/system/wacomtablet/-/commit/4f73ff02b3efd5e8728b18fcf1067eca166704ee.diff")
sha256sums=(`grep ${_pkgname}-${_plasmaver}.tar.xz ../kf6.md5 | cut -d" " -f1`
            '6d47da4ac1c6b4fd5d1917acdc522c5aa54c40ac34b8770b3afe699a3aebf8af')

prepare() {
   cd ${pkgname}-${pkgver}
   #patch -p1 -i ${srcdir}/4f73ff02b3efd5e8728b18fcf1067eca166704ee.diff
   #sed -i -e 's|macro_optional_add_subdirectory|ecm_optional_add_subdirectory|' CMakeLists.txt
}

build() {
  cmake -B build -S ${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DQT_MAJOR_VERSION=6 \
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
