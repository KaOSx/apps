
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=threadweaver6
_pkgname=threadweaver
pkgver=${_kf6ver}
pkgrel=6
pkgdesc='Helper for multithreaded programming'
arch=('x86_64')
url='https://invent.kde.org/frameworks/threadweaver'
license=('LGPL')
depends=('qt6-base')
makedepends=('extra-cmake-modules6')
groups=('kf6')
#source=("https://download.kde.org/stable/frameworks/5.99/${_pkgname}-${pkgver}.tar.xz")
#md5sums=(`grep ${_pkgname}-${_kf6ver}.tar.xz ../kf5.md5 | cut -d" " -f1`)
source=("git+https://invent.kde.org/frameworks/${_pkgname}.git")
md5sums=('SKIP')

build() {
  cmake -B build -S ${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {

  DESTDIR=${pkgdir} cmake --install build
}
