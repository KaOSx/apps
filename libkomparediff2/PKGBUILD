
# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=libkomparediff2
pkgver=${_kdever}
pkgrel=1
pkgdesc="Library to compare files and strings"
url='https://projects.kde.org/projects/kde/kdesdk/libkomparediff2'
arch=('x86_64')
license=('GPL' 'LGPL' 'FDL')
depends=('kcoreaddons' 'kcodecs' 'kconfig' 'kxmlgui' 'ki18n' 'kio' 'kparts')
makedepends=('extra-cmake-modules' 'kdoctools')
conflicts=('kdesdk-libkomparediff2')
replaces=('kdesdk-libkomparediff2')
groups=('kde' 'kde-sdk' 'kde-uninstall' 'programming')
source=("$_mirror/${pkgname}-$_kdever.tar.xz")
#source=("git://anongit.kde.org/libkomparediff2.git")
md5sums=(`grep ${pkgname}-$_kdever.tar.xz ../kde-sc.md5 | cut -d" " -f1`)

build() {
  cd ${srcdir}
  #patch -p0 -i ${srcdir}/kio.patch
  
  mkdir -p build
  cd build
  
  cmake ../${pkgname}-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DKDE_INSTALL_PLUGINDIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
